<!-- Example modified from https://steamcommunity.com/sharedfiles/filedetails/?id=1382344471&searchtext=choose-->

<Defaults>
    <Panel class="MissionPanel" outline="#635351" outlineSize="2 -2"
        active="false"
        width="1400"
        height="1000"
        color="rgba(0,0,0,0.5)"
        rectAlignment="UpperCenter"
        offsetXY="0 -50"
        allowDragging="true"
        showAnimation="FadeIn"
        showAnimationDelay="2"
        returnToOriginalPositionWhenReleased="false"/>

    <Panel class="MissionDetailPanel" outline="#635351" outlineSize="2 -2"
        active="false"
        width="1400"
        height="1000"
        color="rgba(0,0,0,0.5)"
        rectAlignment="UpperCenter"
        offsetXY="0 -50"
        allowDragging="true"
        showAnimation="FadeIn"
        showAnimationDelay="2"
        returnToOriginalPositionWhenReleased="false"/>

    <Button
        class="closeButton"
        width="40"
        height="40"
        rectAlignment="UpperRight"
        color="orange"
        textColor="black"
        text="X"/>

    <Button class="missionButton" padding="0 0 145 0" textColor="#FFFFFF"
        colors="rgba(0.14,0.26,0.13,1)|rgba(0.17,0.3,0.13,1)|rgba(0.45,0.72,0.15,1)|rgba(0.78,0.78,0.78,0.5)"/>

    <Image class="mapImage" width="350" height="350" rectAlignment="UpperCenter" offsetXY="0 -3"/>
    <Image class="mapDetailImage" width="350" height="595" rectAlignment="UpperCenter" offsetXY="0 -3"/>

    <TableLayout class="missionDetailTable"
        padding="100 100 50 50"
        columnWidths="600 600"
        cellSpacing="10"
        useGlobalCellPadding="true"
        autoCalculateHeight="true"/>
</Defaults>

<!-- Mission Select Menu-->
<Panel id="missionSelectBase" class="MissionPanel">
    <VerticalScrollView
        rectAlignment="LowerCenter"
        offsetXY="0 -00"
        scrollSensitivity="40"
        padding="0 0 50 0"
        scrollbarColors="grey|rgba(0.83,0.73,0.2,1)|orange|black"
        width="1400"
        height="1000"
        color="rgba(0,0,0,0)">
        <!-- scroll bar colors
        first = unfocused
        second = focused
        third = active -->
        <TableLayout
            padding="150 150 50 50"
            columnWidths="350 350 350"
            cellSpacing="10"
            useGlobalCellPadding="true"
            autoCalculateHeight="true"
            cellBackgroundColor="rgba(1,1,1,0)">
            <Row preferredHeight="90">
                <Cell><Image image="Banner_BaseMissions_desaturated" width="350" height="90"></Image></Cell>
                <Cell><Image image="Banner_BiomeMissions" width="350" height="90"></Image></Cell>
                <Cell><Image image="Banner_SpaceRigMissions" width="350" height="90"></Image></Cell>
            </Row>

            <!--
            <Row preferredHeight="100">
                <Cell></Cell>
                <Cell><Image image="Banner_MixedMissions" width="390" height="93"></Image></Cell>
                <Cell></Cell>
            </Row>
            -->

            <Row preferredHeight="50">
                <Cell></Cell>
                <Cell><Image image="Banner_Difficulty_1" width="350" height="50"></Image></Cell>
                <Cell></Cell>
            </Row>

            <Row preferredHeight="350">
                <Cell>

                </Cell>
                <Cell>
                    <Button class="missionButton" onClick="closePanelOpenBasePanel(missionSelectBase mission1Panel)"
                        tooltip="Click for mission details">
                        <Image class="mapImage" image="M1"></Image></Button>
                </Cell>
                <Cell>

                </Cell>
            </Row>

            <!--
            <Row preferredHeight="600">
                <Cell>

                </Cell>
                <Cell>

                </Cell>
                <Cell>

                </Cell>
            </Row>
            -->
        </TableLayout>
    </VerticalScrollView>
    <Button class="closeButton" id="closeButton" onClick="closeActivePanel(missionSelectBase)">
</Button>
</Panel>

<Panel id="mission1Panel" class="MissionDetailPanel">
    <TableLayout class="missionDetailTable" id="mission1Table" cellBackgroundColor="rgba(1,1,1,0)">
        <Row preferredHeight="90">
            <Cell>
                <Button onClick="closePanelOpenBasePanel(mission1Panel missionSelectBase)" color="rgba(1,1,1,0)"
                    tooltip="Click to go back">
                    <Image image="BackButton" width="220" height="90"></Image>
                </Button>
            </Cell>
            <Cell>
                <Button onClick="closePanelSetupMission(mission1Panel 1)" color="rgba(1,1,1,0)"
                    tooltip="Click to set up mission">
                    <Image image="SetupMissionButton" width="220" height="90"></Image>
                </Button>
            </Cell>
        </Row>

        <Row preferredHeight="850">
            <Cell>
                <Image class="mapDetailImage" image="M1A"></Image>
            </Cell>
            <Cell>
                <Image class="mapDetailImage" image="M1B"></Image>
            </Cell>
        </Row>
    </TableLayout>
    <Button class="closeButton" id="closeButton" onClick="closeActivePanel(mission1Panel)"></Button>
</Panel>

<!-- Cleanup/Show Maps button -->
<Panel id="setup" class="MissionPanel"
    rectAlignment="LowerLeft"
    active="true"
    offsetXY="0 +480"
    raycastTarget="true"
    width="130"
    height="50"
    color="rgba(1,1,1,0)"
    allowDragging="true"
    padding="5 5 5 5"
    showAnimation="FadeIn"
    showAnimationDelay="2"
    returnToOriginalPositionWhenReleased="false">
    <Button id="setupButton"
        text="Mission
        Setup"
        fontStyle="bold"
        onClick="showPanel(missionSelectBase)">
        <Image class="setupButtonClass" image="MissionSetupButton"></Image>
    </Button>
</Panel>